@using Shop.Application.DTOs.Admin.SiteSetting.Slider;
@using Shop.Application.Utils;
@model FilterSlidersDto


<div class="intro-slider owl-carousel owl-theme owl-nav-inside owl-light" data-toggle="owl"
     data-owl-options='{"dots": false,"nav": false,"rtl": true,"responsive": {"992": {"nav": true }}}'>

     @foreach (var slider in Model.Sliders)
    {
        <div class="intro-slide"
             style="background-image: url(@(PathExtensions.SliderOrgin + slider.SliderImage));">
            <div class="container intro-content text-center">
                <h3 class="intro-subtitle text-white">@slider.SliderTitle</h3>
                
                <h1 class="intro-title text-white">@slider.SliderText</h1>

                <a href="@slider.Href" class="btn btn-outline-white-4" target="_blank">
                    <span>@slider.TextBtn</span>
                </a>
            </div>
        </div>

    }
   
</div>

<span class="slider-loader"></span>