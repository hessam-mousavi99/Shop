@if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null
|| TempData["WarningMessage"] != null || TempData["InfoMessage"] != null)
{
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام موفقیت', '@TempData["SuccessMessage"]', 'success')
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام اخطار', '@TempData["WarningMessage"]', 'warning')
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام خطا', '@TempData["ErrorMessage"]', 'error')
            });
        </script>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام اطالاعیه', '@TempData["InfoMessage"]', 'info')
            });
        </script>
    }
}