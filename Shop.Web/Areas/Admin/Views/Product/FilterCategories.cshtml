
@model FilterCategoryVM
@{
    ViewData["Title"] = "مدریت دسته بندی محصولات";
    var index = 1;
}

<div class="row mt-5">
    <div class="col-md-3">
        <a asp-area="Admin" asp-controller="Product" asp-action="CreateCategory" class="btn btn-info mt-3 mb-3 btn-block">افزودن دسته بندی</a>

        <div class="card shadow-sm">
            <div class="card-body">

                <p class="card-text">@ViewData["Title"]</p>
                <form asp-area="admin" asp-controller="Product" asp-action="FilterCategories" id="filter-Form" method="get">
                    <input asp-for="PageId" type="hidden" />
                    <div class="form-group">
                        <label id="PhoneNumber" class="form-label">فیلتر براساس عنوان:</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="عنوان" />
                    </div>
                    <button type="submit" class="btn btn-info mt-3 mb-3 btn-block">فیلتر</button>
                </form>


            </div>
        </div>


    </div>
    <div class="col-md-9">
        @if (Model.Categories != null && Model.Categories.Any())
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">تصویر</th>
                                <th scope="col">عنوان</th>
                                <th scope="col">url یکتا</th>
                                <th scope="col">دستورات</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <th scope="row">@index</th>
                                    <td>
                                        <img src="@(PathExtensions.CategoryOrgin +category.ImageName)" class="img-thumbnail" style="width:40px;">
                                    </td>
                                    <td>@category.Title</td>
                                    <td>@category.UrlName</td>
                                    <td>
                                        <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Product" asp-action="EditCategory" asp-route-categoryId="@category.Id">ویرایش</a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
        else
        {
            <div class="alert alert-danger">
                <b>ایتمی وجود ندارد</b>
            </div>
        }

        <partial name="_AdminPaging" model="Model.GetCurrentPaging()" />
    </div>
</div>

